#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::Bin/lib", "$FindBin::Bin/../lib";
use File::Find;
use File::Basename;
use Getopt::Long;
use MTL10NUpdater;
use Data::Dump qw/dump/;

GetOptions(\my %opts,
    'name=s@',
    'lang=s@',
    'mt_dir|mt-dir|mt=s',
    'dry_run|dry-run',
    'sort',
    'verbose|v',
    'help|h',
);

if ($opts{help}) {
    die "Usage: $0 [--dry-run] [--name=...] [--lang=ja]";
}

$opts{sort} //= 1;
$opts{root} = "$FindBin::Bin/../..";

MTL10NUpdater->new(%opts)->update;
