<p>
<__trans phrase="Incoming feedback can be monitored for specific keywords, domain names, and patterns. Matches can be held for moderation or scored as junk. Additionally, junk scores for these matches can be customized.">
</p>

    <mtapp:setting
        id="sll_wordlist_moderate"
        label="<__trans phrase="Keywords to Moderate">">
<textarea name="wordlist_moderate" id="sll_wordlist_moderate" class="full-width" rows="10" cols="60"><TMPL_VAR NAME=WORDLIST_MODERATE ESCAPE=HTML></textarea>
    </mtapp:setting>

    <mtapp:setting
        id="sll_wordlist_junk"
        label="<__trans phrase="Keywords to Junk">">
<textarea name="wordlist_junk" id="sll_wordlist_junk" class="full-width" cols="60" rows="10"><TMPL_VAR NAME=WORDLIST_JUNK ESCAPE=HTML></textarea>
    </mtapp:setting>
