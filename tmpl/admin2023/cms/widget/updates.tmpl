<mtapp:widget
  class="updates-widget"
  label="<__trans phrase="Updates">"
  can_close="1">
  <mt:if name="update_check_failed">
    <p><__trans phrase="Update check failed. Please check server network settings."></p>
  <mt:elseif name="disable_version_check">
    <p><__trans phrase="Update check is disabled."></p>
  <mt:else>
    <mt:if name="available_versions">
      <ul class="mt-widget__list">
        <mt:Loop name="available_versions">
          <li>
            <mt:if name="is_security_update">
              <__trans phrase="A security update (Ver. [_1]) is available. Please see the <a href="[_2]" target="_blank">news</a> for detail." params="<mt:var name="version">%%<mt:var name="news_url">">
            <mt:else>
              <__trans phrase="An update (Ver. [_1]) is available. Please see the <a href="[_2]" target="_blank">news</a> for detail." params="<mt:var name="version">%%<mt:var name="news_url">">
            </mt:if>
          </li>
        </mt:Loop>
      </ul>
    <mt:else>
      <p>
        <__trans phrase="Movable Type is up to date.">
      </p>
    </mt:if>
  </mt:if>
</mtapp:widget>
