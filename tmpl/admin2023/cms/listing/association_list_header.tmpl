<mt:setvarblock name="system_msg" append="1">
    <mt:if name="request.saved_deleted">
        <mtapp:statusmsg
            id="saved-deleted"
            class="success">
            <__trans phrase="You have successfully revoked the given permission(s).">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="request.saved">
        <mtapp:statusmsg
            id="saved"
            class="success">
            <__trans phrase="You have successfully granted the given permission(s).">
        </mtapp:statusmsg>
    </mt:if>
</mt:setvarblock>
