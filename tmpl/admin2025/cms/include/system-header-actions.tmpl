<div class="mt-systemHeaderActions">

    <mt:loop name="system_menu_actions">
        <div
            class="mt-systemHeaderAction mt-systemHeaderActions__<mt:var name="id">"
            <mt:if name="id" eq="search">
                data-is="search-button"
                data-search-tabs-json='<mt:app:embedjsonresponse mode="search_tabs_json" escape="html">'
                data-object-type='<mt:var name="object_type" escape="html">'
            </mt:if>
            <mt:if name="id" eq="site">
                data-is="site-list-button"
            </mt:if>
            <mt:loop name="data">
                data-<mt:var name="__key__">="<mt:var name="__value__" escape="html">"
            </mt:loop>
        >
            <mt:setvarblock name="escaped_menu_action_label"><mt:var name="label" escape="html"></mt:setvarblock>
            <a
                class="action <mt:var name="class" escape="html" _default="">"
                href="<mt:var name="href" escape="html" strip="">"
                <mt:if name="target">target="<mt:var name="target" escape="html">"</mt:if>
            >
                <mtapp:svgicon id="$icon" title="<mt:var name="escaped_menu_action_label">">
            </a>
        </div>
    </mt:loop>

    <div class="mt-systemHeaderAction mt-systemHeaderActions__user">
        <div class="action">
            <button class="userActionButton" type="button" id="userDropdownMenu" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-bs-auto-close="outside">
            <mt:if name="author_userpic_url">
                <img src="<mt:var name="author_userpic_url" escape="html">" alt="" width="36" height="34" class="">
            <mt:else>
                <img src="<mt:var name="static_uri">images/admin2025/user-default.svg" alt="" width="36" height="34" class="">
            </mt:if>
            </button>
            <div class="dropdown-menu dropdown-menu-end mt-primaryNavigation__user" aria-labelledby="userDropdownMenu">
            <mt:if name="user_actions">
                <ul>
            </mt:if>
                <li>
                    <span>
                        <mt:if name="author_userpic_url">
                            <img src="<mt:var name="author_userpic_url" escape="html">" alt="" width="21" height="21" class="">
                        <mt:else>
                            <img src="<mt:var name="static_uri">images/admin2025/user-default.svg" alt="" width="21" height="21" class="">
                        </mt:if>
                        <span class="mt-author-name"><mt:var name="author_name" escape="html"></span>
                        <button data-bs-dismiss="dropdown" class="close close-dropdown" type="button">&times;</button>
                    </span>
                </li>
            <mt:loop name="user_actions">
                <mt:setvarblock name="user_action_href"><mt:if name="href"><mt:var name="href" escape="none"><mt:elseif name="mode"><mt:var name="mt_url">?__mode=<mt:var name="mode" escape="none"><mt:else>javascript:void(0)</mt:if></mt:setvarblock>
                    <li id="menu-<mt:var name="id" escape="html">">
                        <a href="<mt:var name="user_action_href" escape="html">"<mt:if name="target"> target="<mt:var name="target" escape="html">"</mt:if> class="dropdown-item">
                          <mt:var name="label" escape="html">
                        </a>
                    </li>
            </mt:loop>
            <mt:if name="user_actions">
                </ul>
            </mt:if>
            </div>
        </div>
    </div>


</div>