
<div class="mt-breadcrumb">

  <span class="dashboard">
    <mt:if name="scope_type" ne="user">
      <a href="<mt:var name="mt_url">?__mode=dashboard" title="<__trans phrase="Dashboard">">
    </mt:if>

    <svg role="img" class="mt-icon">
      <title><__trans phrase="Dashboard"></title>
      <use xlink:href="<mt:var name="static_uri">images/admin2025/sprite.svg#ic_home"></use>
    </svg>

    <mt:if name="scope_type" eq="user">
      <__trans phrase="Dashboard">
    </mt:if>

    <mt:if name="scope_type" ne="user">
      </a>
      <span class="mt-gts">&gt;</span>
    </mt:if>
  </span>

  <mt:if name="breadcrumbs">
    <mt:if name="scope_type" eq="system">
      <mt:if name="can_access_to_system_dashboard">
        <a href="<mt:var name="script_url">?__mode=dashboard&blog_id=0">
          <__trans phrase="System">
        </a>
      <mt:else>
        <__trans phrase="System">
      </mt:if>
    <mt:else>
      <mt:if name="scope_type" eq="blog">
        <mt:if name="curr_website_can_link">
          <a
            href="<mt:var name="script_url">?__mode=dashboard&blog_id=<mt:var name="curr_website_id" escape="html">"
            title="<mt:var name="curr_website_name" escape="html">"
          >
            <mt:var name="curr_website_name" escape="html" trim_to="20+...">
          </a>
        <mt:else>
          <span title="<mt:var name="curr_website_name" escape="html">"><mt:var name="curr_website_name" escape="html" trim_to="20+..."></span>
        </mt:if>
        <span class="mt-gts">&gt;</span>
      </mt:if>

      <a
        href="<mt:var name="script_url">?__mode=dashboard&blog_id=<mt:var name="blog_id" escape="html">"
        title="<mt:var name="blog_name" escape="html">"
      >
        <mt:var name="blog_name" escape="html" trim_to="20+...">
      </a>

    </mt:if>

    <mt:loop name="breadcrumbs">
      <span class="mt-gts">&gt;</span>
      <mt:if name="bc_uri">
        <a
          href="<mt:var name="bc_uri" escape="html">"
          title="<mt:var name="bc_name" escape="html">"
        >
          <mt:var name="bc_name" escape="html" trim_to="20+...">
        </a>
      <mt:else>
        <span title="<mt:var name="bc_name" escape="html">">
          <mt:var name="bc_name" escape="html" trim_to="20+...">
        </span>
      </mt:if>
    </mt:loop>
  <mt:else>
    <mt:if name="scope_type" eq="system">
      <__trans phrase="System">
    <mt:elseif name="scope_type" eq="website">
      <span title="<mt:var name="blog_name" escape="html">">
        <mt:var name="blog_name" escape="html" trim_to="20+...">
      </span>
    <mt:elseif name="scope_type" eq="blog">
      <mt:if name="curr_website_can_link">
        <a
          href="<mt:var name="script_url">?__mode=dashboard&blog_id=<mt:var name="curr_website_id" escape="html">"
          title="<mt:var name="curr_website_name" escape="html">"
        >
          <mt:var name="curr_website_name" escape="html" trim_to="20+...">
        </a>
      <mt:else>
        <span title="<mt:var name="curr_website_name" escape="html">">
          <mt:var name="curr_website_name" escape="html" trim_to="20+...">
        </span>
      </mt:if>
      <span class="mt-gts">&gt;</span>
      <span title="<mt:var name="blog_name" escape="html">">
        <mt:var name="blog_name" escape="html" trim_to="20+...">
      </span>
    </mt:if>
  </mt:if>
</div>

