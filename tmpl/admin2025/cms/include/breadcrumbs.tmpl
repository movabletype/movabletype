
<div class="mt-breadcrumb">
  <mt:if name="scope_type" ne="user">
    <a href="<mt:var name="mt_url">?__mode=dashboard" title="<__trans phrase="Dashboard">">
  </mt:if>

  <svg role="img" class="mt-icon">
    <title><__trans phrase="Dashboard"></title>
    <use xlink:href="<mt:var name="static_uri">images/admin2025/sprite.svg#ic_home"></use>
  </svg>

  <mt:if name="scope_type" eq="user">
    <__trans phrase="Dashboard">
  </mt:if>

  <mt:if name="scope_type" ne="user">
    </a>
    <span class="mt-gts">&gt;</span>
  </mt:if>

<mt:if name="breadcrumbs">
  <span
    data-is="breadcrumbs"
    data-scope-type="<mt:var name="scope_type" escape="html">"
    data-can-access-to-system-dashboard="<mt:var name="can_access_to_system_dashboard" escape="html">"
    data-curr-website-can-link="<mt:var name="curr_website_can_link" escape="html">"
    data-curr-website-id="<mt:var name="curr_website_id" escape="html">"
    data-curr-website-name="<mt:var name="curr_website_name" escape="html">"
    data-blog-id="<mt:var name="blog_id" escape="html">"
    data-blog-name="<mt:var name="blog_name" escape="html">"
    data-breadcrumbs="<mt:var name="breadcrumbs" to_json="1" escape="html">"
  >
  </span>

  <mt:loop name="breadcrumbs">
  <span class="mt-gts">&gt;</span>
    <mt:if name="bc_uri">
  <a href="<mt:var name="bc_uri" escape="html">">
    <mt:var name="bc_name" escape="html">
  </a>
    <mt:else>
  <mt:var name="bc_name" escape="html">
    </mt:if>
  </mt:loop>
<mt:else>
  <mt:if name="scope_type" eq="system">
  <__trans phrase="System">
  <mt:elseif name="scope_type" eq="website">
  <mt:var name="blog_name" escape="html">
  <mt:elseif name="scope_type" eq="blog">
    <mt:if name="curr_website_can_link">
  <a href="<mt:var name="script_url">?__mode=dashboard&blog_id=<mt:var name="curr_website_id" escape="html">">
    <mt:var name="curr_website_name" escape="html">
  </a>
    <mt:else>
  <mt:var name="curr_website_name" escape="html">
    </mt:if>
  <span class="mt-gts">&gt;</span>
  <mt:var name="blog_name" escape="html">
  </mt:if>
</mt:if>
</div>

