<mt:setvarblock name="page_title"><__trans phrase="Path Configuration"></mt:setvarblock>
<mt:setvarblock name="page_content">
<form method="post">
  <input type="hidden" name="__mode" value="" />
  <input type="hidden" name="step" value="pre_start" />
  <input type="hidden" name="config" value="<$mt:var name="config" escape="html"$>" />
  <input type="hidden" name="set_static_uri_to" value="<mt:var name="static_uri" escape="html">" />
  <input type="hidden" name="set_static_file_to" value="<mt:var name="static_file" escape="html">" />
  <input type="hidden" name="default_language" value="<mt:var name="default_language" escape="html">" />
  <p class="intro"><__trans phrase="We recommend to set following configurations for separating system and contents."></p>
  <h3><__trans phrase="Configure Base Site Path"></h2>
  <p class="intro"><__trans phrase="Sets the default website path. If this value is specified, Movable Type will limit path settings for all newly created web sites."></p>

  <mt:if name="path_invalid">
    <div id="path_invalid" class="msg msg-error">
      <p class="msg-text">
        <__trans phrase="<strong>Error</strong>" params="<$mt:var name="set_base_site_path_to" escape="html" escape="html"$>">
      </p>
    </div>
  </mt:if>    

  <mtapp:setting
     id="set_base_site_path_to"
     label="<__trans phrase="Base site path">"
     label_class="top-label">
    <input type="text" name="set_base_site_path_to" id="set_base_site_path_to" class="form-control text full" value="<$mt:var name="set_base_site_path_to" default="$base_site_path" escape="html"$>" size="" aria-describedby="baseSitePath">
  </mtapp:setting>

  <p id="more"><a href="#"><__trans phrase="Show Advanced Configuration Options"></a></p>
    <div id="advanced_fields" style="display: none;">
      <mt:setvarblock name="hintsdu">
        <__trans phrase="This URL path can be in the form of [_1] or simply [_2]" params="<strong>http://example.com/mt-support/</strong>%%<strong>/mt-support</strong>">
      </mt:setvarblock>
      <mt:setvarblock name="hintsdp">
        <__trans phrase="This path must be in the form of [_1]" params="<strong>/absolute/path/to/mt-support</strong>">
      </mt:setvarblock>
      <mt:setvarblock name="hintpp">
        <__trans phrase="This path must be in the form of [_1]" params="<strong>/absolute/path/to/mt-plugins</strong>">
      </mt:setvarblock>
    
      <h3><__trans phrase="Configure Support Directory"></h2>
      <p class="intro"><__trans phrase="MT uploads asset files for CMS, for example, Userpics or theme thumbnails to support directory. To change the directory, need to make the directry and grant permission to write, in advance."></p>     
      <mtapp:setting
        id="set_support_directory_url_to"
        label="<__trans phrase="Support directory URL">"
        label_class="top-label"
        show_hint="1"
        hint_id="supportDirectoryUrl"
        hint="$hintsdu">
        <input type="text" name="set_support_directory_url_to" id="set_support_directory_url_to" class="form-control text full" value="<$mt:var name="set_support_directory_url_to" default="$support_directory_url" escape="html"$>" size="" aria-describedby="supportDirectoryUrl">
      </mtapp:setting>
      <mtapp:setting
        id="set_support_directory_path_to"
        label="<__trans phrase="Support directory path">"
        label_class="top-label"
        show_hint="1"
        hint_id="supportDirectoryPath"
        hint="$hintsdp">
        <input type="text" name="set_support_directory_path_to" id="set_support_directory_path_to" class="form-control text full" value="<$mt:var name="set_support_directory_path_to" default="$support_directory_path" escape="html"$>" size="" aria-describedby="supportDirectoryPath">
      </mtapp:setting>
      <h3><__trans phrase="Configure Plugin Path"></h2>
        <p class="intro"><__trans phrase="The path to a Movable Type plugins directory. "></p>
        <mtapp:setting
          id="set_plugin_path_to"
          label="<__trans phrase="Plugin path">"
          label_class="top-label"
          show_hint="1"
          hint_id="pluginPath"
          hint="$hintpp">
          <input type="text" name="set_plugin_path_to" id="set_plugin_path_to" class="form-control text full" value="<$mt:var name="set_plugin_path_to" default="$plugin_path" escape="html"$>" size="" aria-describedby="pluginPath">
        </mtapp:setting>  
     </div>

  <div class="actions-bar text-right">
    <button 
       name="continue"
       type="submit"
       onclick="go('next_step');"
       class="continue action primary button btn btn-primary">
      <__trans phrase="Continue">
    </button>
    <button 
       name="back"
         type="submit"
       onclick="this.form.reset(); go('previous_step');"
       class="goback action button btn btn-default">
      <__trans phrase="Back">
    </button>    
  </div>
</form>
</mt:setvarblock>
    
<mt:setvarblock name="js_include" append="1">
<script type="text/javascript">
/* <![CDATA[ */
function go(mode) {
    var f = document.forms[0];
    f['__mode'].value = mode;
}

jQuery('#more').on('click', function(event) {
  jQuery('#advanced_fields').show();
  jQuery(this).remove();
});
/* ]]> */
</script>
</mt:setvarblock>

<mt:include name="layout/chromeless.tmpl">
<mt:var name="layout">

