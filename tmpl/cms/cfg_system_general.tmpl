     can_close="0">
  </mtapp:statusmsg>

  <form id="test_form">
    <mtapp:setting
       id="to_email_address"
       label="<__trans phrase="Send Mail To">"
       label_class="top-label"
       hint="<__trans phrase="The email address that should receive a test email from Movable Type.">"
