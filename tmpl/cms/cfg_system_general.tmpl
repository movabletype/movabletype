        <div class="textarea-wrapper">
            <input id="system_email_address" name="system_email_address"<mt:if name="system_email_address"> value="<mt:var name="system_email_address">"</mt:if> />
        </div>
    </mt:app:setting>

</fieldset>

<mt:setvarblock name="action_buttons">
    <button
        type="submit"
        accesskey="s"
        title="<__trans phrase="Save changes to this [lc,_1] (s)" params="<mt:var name="object_label">">"
        class="primary-button"
        ><__trans phrase="Save Changes"></button>
