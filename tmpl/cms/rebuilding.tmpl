<mt:if name="is_one_index">
    <mtapp:statusmsg
        id="is_one_index"
        class="publishing">
        <__trans phrase="Publishing [_1]" params="<mt:var name="build_type_name" escape="html"> ">...
    </mtapp:statusmsg>
<mt:else>
<mt:if name="is_individual">
    <mtapp:statusmsg
        id="is_individual"
        class="publishing">
        <__trans phrase="Publishing [_1] pages [_2]" params="<mt:var name="build_type_name">%%<mt:var name="indiv_range"> ">...
    </mtapp:statusmsg>
<mt:else>
<mt:if name="is_entry">
<mt:if name="dynamic">
    <mtapp:statusmsg
        id="is_entry"
        class="publishing">
        <__trans phrase="Publishing [_1] dynamic links" params="<mt:var name="build_type_name" escape="html"> ">...
    </mtapp:statusmsg>
<mt:else>
    <mtapp:statusmsg
        id="publishing"
        class="publishing">
        <__trans phrase="Publishing [_1]" params="<mt:var name="build_type_name" escape="html"> ">...
    </mtapp:statusmsg>
</mt:if>
<mt:else>
<mt:if name="dynamic">
    <mtapp:statusmsg
        id="dynamic"
        class="publishing">
        <__trans phrase="Publishing [_1] dynamic links" params="<mt:var name="build_type_name" escape="html"> ">...
    </mtapp:statusmsg>
<mt:else>
<mt:if name="build_type_name">
    <mtapp:statusmsg
        id="build_type_name"
        class="publishing">
        <__trans phrase="Publishing [_1] pages" params="<mt:var name="build_type_name" escape="html"> ">...
    </mtapp:statusmsg>
<mt:else>
<mtapp:statusmsg
    id="generic"
    class="publishing">
    <__trans phrase="_REBUILD_PUBLISH">...
</mtapp:statusmsg>
</mt:if>
</mt:if>
</mt:if>
</mt:if>
</mt:if>
</h4>

<mt:if name="total">
<div class="progress-bar<mt:unless name="complete"> progress-bar-indeterminate<mt:else>" style="background-position: <mt:var name="incomplete">% 0</mt:unless>">
    <span><$mt:var name="complete"$>% Complete</span>&nbsp;
</div>
</mt:if>

<mt:if name="is_full_screen">
</div>
</mt:if>

