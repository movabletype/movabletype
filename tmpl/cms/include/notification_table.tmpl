<mtapp:listing>
    <mt:if name="__first__">
        <mt:setvarblock name="table_header">
        <tr>
            <th class="cb" id="delete-col-head"><input type="checkbox" name="id-head" value="all" class="select" /></th>
            <th class="email primary-col"><__trans phrase="Email"></th>
            <th class="url primary-col"><__trans phrase="URL"></th>
            <th class="datetime"><__trans phrase="Date Added"></th>
        </tr>
        </mt:setvarblock>
    <thead>
        <mt:var name="table_header">
    </thead>
    <tfoot>
        <mt:var name="table_header">
    </tfoot>
    <tbody>
    </mt:if>
        <tr class="<mt:if name="__odd__">odd<mt:else>even</mt:if>">
            <td class="cb" id="delete-<mt:var name="id">"><input type="checkbox" name="id" value="<mt:var name="id">" class="select" /></td>
            <td class="email"><a href="javascript:void(0)" title="<__trans phrase="Click to edit contact">" class="edit-link" id="note-email-link-<mt:var name="id">" onclick="edit_note(<mt:var name="id">); return false;"><mt:var name="email" escape="html"></a>
                <span id="note-email-field-<mt:var name="id">" style="display: none">
                    <input type="text" name="note-email-<mt:var name="id">" id="note-email-<mt:var name="id">" value="<mt:var name="email" escape="html">" />
                </span>
            </td>
            <td class="url"><span id="note-url-link-<mt:var name="id">"><a href="javascript:void(0)" title="<__trans phrase="Click to edit contact">" onclick="edit_note(<mt:var name="id">); return false;"><mt:var name="url" escape="html" default="-"></a><mt:if name="url">&nbsp;<a href="<mt:var name="url" escape="html">">&raquo;</a></mt:if></span>
                <span id="note-url-field-<mt:var name="id">" style="display: none">
                    <input type="text" name="note-url-<mt:var name="id">" id="note-url-<mt:var name="id">" value="<mt:var name="url" escape="html">" />
                    <span class="buttons">
                        <button
                            onclick="submit_edit(<mt:var name="id">); return false;"
                            title="<__trans phrase="Save changes">"
                            ><__trans phrase="Save"></button>
                        <button
                            onclick="cancel_edit(<mt:var name="id">); return false;"
                            ><__trans phrase="Cancel"></button>
                    </span>
                </span>
            </td>
            <td class="datetime"><span title="<mt:var name="created_on_time_formatted">"><mt:if name="created_on_relative"><mt:if name="dates_relative"><mt:var name="created_on_relative"><mt:else><mt:var name="created_on_formatted"></mt:if><mt:else><mt:var name="created_on_formatted"></mt:if></span></td>
        </tr>
    <mt:if name="__last__">
    </tbody>
    </mt:if>
</mtapp:listing>
