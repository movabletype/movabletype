<mt:if name="editors">

<mt:setvarblock name="js_include" append="1">
<mt:unless name="optimize_ui">
<mt:script type="text/javascript" path="js/editor/editor_manager.js">
<mt:script type="text/javascript" path="js/editor/editor_command.js">
<mt:script type="text/javascript" path="js/editor/editor_command/wysiwyg.js">
<mt:script type="text/javascript" path="js/editor/editor_command/source.js">
<mt:script type="text/javascript" path="js/editor/app.js">
<mt:script type="text/javascript" path="js/editor/editor.js">
<mt:script type="text/javascript" path="js/editor/app/editor_strategy.js">
<mt:script type="text/javascript" path="js/editor/app/editor_strategy/single.js">
<mt:script type="text/javascript" path="js/editor/app/editor_strategy/multi.js">
<mt:script type="text/javascript" path="js/editor/app/editor_strategy/separator.js">
<mt:script type="text/javascript" path="js/editor/editor/source.js">
<mt:else>
<mt:script type="text/javascript" path="js/editor.js">
</mt:unless>
<script type="text/javascript">
(function() {

MT.EditorManager.updateMap({
    wysiwyg: '<mt:var name="wysiwyg_editor" escape="js" />',
    source: '<mt:var name="source_editor" escape="js" />'
});
MT.App.setDefaultEditorStrategy('<mt:var name="editor_strategy" escape="js" />');

var opts = {
    body_class_list: ['wysiwyg', '<mt:var name="object_type" escape="js" />'],
    tainted_input: <mt:If name="tainted_input">true<mt:Else>false</mt:If>
};
<mt:if name="content_css">
opts['content_css_list'] = ['<mt:var name="content_css" escape="js" />'];
</mt:if>
MT.Editor.updateDefaultCommonOptions(opts);

})();
</script>
</mt:setvarblock>
<mt:loop name="editors">
  <mt:var name="__value__" key="templates" setvar="templates" />
  <mt:var name="__value__" key="extensions" setvar="extensions" />
  <mt:var name="__value__" key="config" setvar="config" />

  <mt:loop name="templates">
    <mt:var name="tmpl" config="$config" />
  </mt:loop>
  <mt:loop name="extensions">
    <mt:var name="tmpl" config="$config" />
  </mt:loop>
</mt:loop>

</mt:if>
