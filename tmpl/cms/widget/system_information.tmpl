<mtapp:widget
  class="system-information-widget"
  label="<__trans phrase="System Information">"
  can_close="1">
  <div class="mt-widget__content row">
    <div class="mt-widget__data"><__trans phrase="Active Users"><br><strong class="number"><mt:var name="active_users"></strong></div>
    <div class="mt-widget__data"><__trans phrase="Sites"><br><strong class="number"><mt:var name="total_sites"></strong></div>
    <div class="mt-widget__data"><__trans phrase="Content Types"><br><strong class="number"><mt:var name="total_content_types"></strong></div>
    <div class="mt-widget__data"><__trans phrase="Server Model"><br><strong><mt:var name="server_model"></strong></div>
  </div>
</mtapp:widget>

