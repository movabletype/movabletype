<mt:setvarblock name="jq_js_include" append="1">
    jQuery('.plugin-name').click(function() {
        jQuery('.plugin').not(jQuery(this).parents('.plugin')).removeClass('plugin-expanded');
        jQuery(this).parents('.plugin').toggleClass('plugin-expanded');
        return false;
    });

    jQuery.each(plugin_ids, function() {
        jQuery('#plugin-'+this+'-content').tabs();
    });

    if ( location.hash ) {
        // Open plugin contents.
        jQuery('div'+location.hash+' .plugin-name').trigger('click');

        // If there is Settings tab, open it.
        if ( jQuery('a'+location.hash+'-config') ) {
            var last_tab_index = jQuery(location.hash+'-content li.tab').length - 1;
            jQuery(location.hash+'-content').tabs( 'option', 'active', last_tab_index );
        }
    }
</mt:setvarblock>

