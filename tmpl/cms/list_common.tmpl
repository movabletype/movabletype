    js_message: '<__trans phrase="<mt:var name="js_message">" escape="js">'
    <mt:if name="action_mode">,mode:'<mt:var name="action_mode">'</mt:if>
    <mt:if name="input">,input:'<mt:var name="input_label" escape="js">'</mt:if>
