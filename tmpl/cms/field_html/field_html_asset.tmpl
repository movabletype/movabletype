    </div>
    <div class="mt-flexBreak"></div>
    <div class="collapse mt-collapse__content mt-draggable__content" id="collapse-<mt:var name="content_field_id" escape="html">-<mt:var name="asset_id" escape="html">">
      <div class="row">
        <div class="col">
  <mt:if name="asset_type" eq="image">
          <div class="asset-preview-image picture small mb-3">
            <img src="<mt:var name="asset_preview_url" escape="html">" width="<mt:var name="asset_preview_width" escape="html">" height="<mt:var name="asset_preview_height" escape="html">">
