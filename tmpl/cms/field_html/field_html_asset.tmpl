  <mt:if name="asset_type" eq="audio">
      <mtapp:svgicon id="ic_audio" title="Audio">
  <mt:elseif name="asset_type" eq="image">
      <mtapp:svgicon id="ic_image" title="Image">
  <mt:elseif name="asset_type" eq="video">
      <mtapp:svgicon id="ic_movie" title="Video">
  <mt:else>
