          jQuery(this).parent('.add-form').remove();
          jQuery('.sort-tab').show();
          $children.show();
          initItem($item);
        })
        .appendTo($form);
      $form.appendTo($element);
      $form.find('.label, .basename').bind('keypress', function (e) {
