// id should be numeric / x1
function removeItems(id) {
  var singlar = '<mt:var name="object_label" lower_case="1" escape="js">';
  var plural = '<mt:var name="object_label_plural" lower_case="1" escape="js">';
  var $items = jQuery('.pcat-'+id);
