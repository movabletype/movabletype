        } else if (left < 0) {
          if (idx + d < nest.length) {
            place = nest[idx + d];
            pos = nest.length - (idx + d);
          } else {
            place = next_parent;
            pos = next_level;
          }
        } else {
          place = parent;
          pos = level;
