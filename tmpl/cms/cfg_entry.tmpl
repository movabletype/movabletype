  </mtapp:settinggroup>

  <mtapp:settinggroup id="wysiwyg-editor-setting">
    <legend class="h3"><__trans phrase="WYSIWYG Editor Setting"></legend>
    <mtapp:setting
       id="content_css"
       label="<__trans phrase="Content CSS">"
       hint="<__trans phrase="Content CSS will be applied when WYSIWYG editor does support. You can specify CSS file by URL or {{theme_static}} placeholder. Example: {{theme_static}}path/to/cssfile.css">"
       hint_id="contentCss"
       show_hint="1">
       <input type="text" name="content_css" class="form-control" value="<mt:var name="content_css" escape="html">" placeholder="http://www.example.com/path/to/cssfile.css" aria-describedby="contentCss" />
    </mtapp:setting>
  </mtapp:settinggroup>

  <mtapp:settinggroup id="smart-replace-setting">
    <legend class="h3"><__trans phrase="Punctuation Replacement Setting"></legend>

    <small class="form-text text-muted hint"><__trans phrase="Replace UTF-8 characters frequently used by word processors with their more common web equivalents."></small>

    <mtapp:setting
       id="nwc_smart_replace"
       label="<__trans phrase="Punctuation Replacement">">
      <ul class="list-unstyled">
        <li>
          <div class="custom-control custom-radio">
            <input type="radio" value="2" name="nwc_smart_replace" class="custom-control-input" id="nwc_replace_none" onclick="DOM.addClassName(DOM.getElement('replace-fields-field'), 'hidden');"<mt:if name="nwc_smart_replace_2"> checked="checked"</mt:if>>
            <label class="custom-control-label" for="nwc_replace_none"><__trans phrase="No substitution"></label>
          </div>
        </li>
        <li>
          <div class="custom-control custom-radio">
            <input type="radio" value="1" name="nwc_smart_replace" class="custom-control-input" id="nwc_replace_entities" onclick="DOM.removeClassName(DOM.getElement('replace-fields-field'), 'hidden');"<mt:if name="nwc_smart_replace_1"> checked="checked"</mt:if>>
            <label class="custom-control-label" for="nwc_replace_entities"><__trans phrase="Character entities (&amp#8221;, &amp#8220;, etc.)"></label>
          </div>
        </li>
        <li>
          <div class="custom-control custom-radio">
            <input type="radio" value="0" name="nwc_smart_replace" class="custom-control-input" id="nwc_replace_ascii" onclick="DOM.removeClassName(DOM.getElement('replace-fields-field'), 'hidden');"<mt:if name="nwc_smart_replace_0"> checked="checked"</mt:if>>
            <label class="custom-control-label" for="nwc_replace_ascii"><__trans phrase="ASCII equivalents (&quot;, ', ..., -, --)"></label>
          </div>
        </li>
      </ul>
    </mtapp:setting>

  <mt:unless name="nwc_replace_none">
    <mtapp:setting
       id="replace-fields"
       label="<__trans phrase="Replace Fields">">
      <div class="form-group align-items-center multiple-selection">
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" value="1" name="nwc_title" id="nwc_title"<mt:if name="nwc_title"> checked="checked"</mt:if> class="custom-control-input cb"/>
