    </mtapp:setting>

    <mtapp:setting
       id="image_default_align"
       label="<__trans phrase="Alignment">">
      <div class="form-group">
        <div class="custom-control custom-radio icon-left icon-left-xwide icon-align icon-align-none">
          <input type="radio" name="image_default_align" id="image_default_align-none" class="custom-control-input rb" value="none" <mt:if name="align_none">checked="checked" </mt:if>/>
