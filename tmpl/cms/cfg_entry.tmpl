        <mt:else>
            <__trans phrase="Note: This option is currently ignored since comments are disabled either site or system-wide.">
        </mt:if>
          </span>
        </p>
    </mt:unless>
      </div>
    </mtapp:setting>
    </mt:if>

    <mt:if name="enabled_plugins{Trackback}">
    <mtapp:setting
       id="allow_pings_default"
       label="<__trans phrase="TrackBacks">"
       help_page="blog_settings_entry_defaults"
       help_section="allow_trackbacks">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" value="1" name="allow_pings_default" class="custom-control-input" id="allow_pings_default"<mt:if name="allow_pings_default"> checked="checked"</mt:if> />
          <label class="custom-control-label" for="allow_pings_default"><__trans phrase="Accept TrackBacks"></label>
        </div>
    <mt:unless name="system_allow_pings">
        <p>
          <img src="<mt:var name="static_uri">images/status_icons/warning.gif" alt="<__trans phrase="Setting Ignored">" width="9" height="9" />
          <span class="text-warning alert-warning-inline">
        <mt:if name="is_blog">
            <__trans phrase="Note: This option is currently ignored since TrackBacks are disabled either child site or system-wide.">
        <mt:else>
            <__trans phrase="Note: This option is currently ignored since TrackBacks are disabled either site or system-wide.">
        </mt:if>
          </span>
        </p>
    </mt:unless>
      </div>
    </mtapp:setting>
    </mt:if>

    <mt:setvarblock name="entry_fields" id="entry_fields"></mt:setvarblock>
    <mtapp:setting
       id="entry_prefs"
       label="<__trans phrase="Entry Fields">">
      <div class="form-group align-items-center fixed-width multiple-selection">
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-title" value="title" checked="checked" disabled="disabled" class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-title"><__trans phrase="Title"></label>
          </div>
        </div>
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-body" value="text" checked="checked" disabled="disabled" class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-body"><__trans phrase="Body"></label>
