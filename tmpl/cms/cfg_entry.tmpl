       id="allow_comments_default"
       label="<__trans phrase="Comments">"
       help_page="blog_settings_entry_defaults"
       help_section="accept_comments">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" name="allow_comments_default" id="allow_comments_default" class="custom-control-input" value="1"<mt:if name="ALLOW_COMMENTS_DEFAULT_1"> checked="checked"</mt:if> />
