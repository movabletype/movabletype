          </div>
        </div>
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-keywords" value="keywords"<mt:if name="entry_disp_prefs_show_keywords"> checked="checked"</mt:if> class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-keywords"><__trans phrase="Keywords"></label>
          </div>
        </div>
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-tags" value="tags"<mt:if name="entry_disp_prefs_show_tags"> checked="checked"</mt:if> class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-tags"><__trans phrase="Tags"></label>
          </div>
        </div>
        <mt:if name="enabled_plugins{Comments}">
        <div class="form-check form-check-inline">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-feedback" value="feedback"<mt:if name="entry_disp_prefs_show_feedback"> checked="checked"</mt:if> class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-feedback"><__trans phrase="Comments"></label>
          </label>
        </div>
        </mt:if>
        <div class="form-check form-check-inline">
          <div class="custom-control custom-checkbox">
            <input type="checkbox" name="entry_custom_prefs" id="entry-prefs-assets" value="assets"<mt:if name="entry_disp_prefs_show_assets"> checked="checked"</mt:if> class="custom-control-input cb" />
            <label class="custom-control-label" for="entry-prefs-assets"><__trans phrase="Assets"></label>
          </div>
        </div>
        <mt:var name="entry_fields">
      </div>
    </mtapp:setting>

