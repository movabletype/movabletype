  function cancel_click(btn) {
      var frm = btn.form;
      frm.onsubmit = function() {return cancel_upload(frm)};
      return true;
  }
  function cancel_upload(frm) {
      frm['__mode'].value = 'cancel_upload';
      jQuery.fn.mtModal.close();
      return true;
  }
  /* ]]> */
</script>
</mt:setvarblock>

