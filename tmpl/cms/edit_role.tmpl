        <a href="<mt:var name="script_url">?__mode=view&amp;_type=role&amp;id=<mt:var name="id" escape="url">"><mt:var name="name" escape="html"></a> 
      </mt:loop>
      </div>
    </mtapp:setting>
    </mt:if>
  </mt:if>
