  function toggleFile() {
      var fld = getByID("basename");
      if (fld) {
          fld.disabled = false;
          fld.focus();
          var baseman = getByID("basename_manual");
          if (baseman) baseman.value = "1";
          var basewarn = getByID("basename-warning");
          if (basewarn) basewarn.style.display = "block";
